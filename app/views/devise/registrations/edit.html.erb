<div class="row">

  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "well", :method => :put }) do |f| %>
      <%= devise_error_messages! %>

        <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>

       <%= f.input :email %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
       <%= f.input :password %>
       <%= f.input :password_confirmation %>
       <%= f.input :current_password %>

          <div><%= f.button :submit, "Update" %></div>
        <% end %>
        </fieldset>
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

        <%= link_to "Back", :back %>

    </div>

    <div class="span8">
      <h2>Editing your account is easy.</h2>
    </div>
</div>